{% extends '@layout/default.html.twig' %}

{% block javascript %}
  <script src="/js/create-tv-show.js" type="text/javascript"></script>
{% endblock %}

{% block content %}

  <form @submit.prevent="create()" id="create-form">
    <div class="form-group">
      <label for="title">Title</label><br/>
      <input type="text" class="form-control" id="title" v-model="tvShow.title">
      <br/>
      <div>
        <div v-for="error in errors.title" class="alert alert-warning" role="alert">
          {{ '{{ error }}' }}
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="description">Description</label><br/>
      <textarea v-model="tvShow.description" class="form-control" id="description"></textarea>
      <br/>
      <div>
        <div v-for="error in errors.description" class="alert alert-warning" role="alert">
          {{ '{{ error }}' }}
        </div>
       </div>
    </div>

     <br/>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
{% endblock %}
