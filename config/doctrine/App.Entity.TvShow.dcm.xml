<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\TvShow" table="tv_shows">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string" length="255" nullable="false" />
        <field name="description" type="text" nullable="false"/>
        <field name="imageUrl" type="string" length="255" nullable="false" />
    </entity>

</doctrine-mapping>
